<% provide(:title, 'All users') %>
<h1>All Users</h1>


<ul class="users">
  <div class = "row">
    <aside class="span6">
      <section>
	    <h3>Users</h3>
        <% @admin.each do |user| %>
          <% if user.admin == 0 %>
            <li>
            <%= gravatar_for user, size: 52 %>
            <%= link_to user.name, admin_user_path(user.id) %>
            | <%= link_to "edit", edit_admin_user_path(user)%>
            | <%= link_to "delete", admin_user_path(user), method: :delete, data: { confirm: "You sure?" } %>
            </li>
          <% end %>
        <% end %>
        <br></br>
        <p><%= link_to "Create new user", new_admin_user_path %> </p>
      </section>
    </aside>
	<aside class="span6">
      <section>
        <h3>Admin</h3>
        <% @admin.each do |user| %>
          <% if user.admin == 1 %>
            <li>
            <%= gravatar_for user, size: 52 %>
            <%= link_to user.name, admin_user_path(user.id) %>
            </li>
          <% end %>
        <% end %>
      </section>
    </aside>
  </div>
</ul>